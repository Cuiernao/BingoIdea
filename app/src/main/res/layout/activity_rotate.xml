<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/bg_blue_deep"
  android:gravity="center_horizontal"
  android:orientation="vertical"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin">

  <com.whu.zengbin.mutiview.stereo.VStereoView
    android:id="@+id/stereoView"
    android:layout_width="330dp"
    android:layout_height="250dp"
    android:layout_marginTop="50dp">

    <com.whu.zengbin.mutiview.stereo.HStereoView
      android:id="@+id/stereoView21"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <include layout="@layout/item_rotate_layout" />
    </com.whu.zengbin.mutiview.stereo.HStereoView>


    <com.whu.zengbin.mutiview.stereo.HStereoView
      android:id="@+id/stereoView22"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:isstarttheme="true">

      <include layout="@layout/item_rotate_layout" />

    </com.whu.zengbin.mutiview.stereo.HStereoView>


    <com.whu.zengbin.mutiview.stereo.HStereoView
      android:id="@+id/stereoView23"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <include layout="@layout/item_rotate_layout" />

    </com.whu.zengbin.mutiview.stereo.HStereoView>

    <com.whu.zengbin.mutiview.stereo.HStereoView
      android:id="@+id/stereoView24"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <include layout="@layout/item_rotate_layout" />
    </com.whu.zengbin.mutiview.stereo.HStereoView>


  </com.whu.zengbin.mutiview.stereo.VStereoView>

  <TextView
    android:id="@+id/backorigion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="未必能回到第一面的按钮"
    android:textColor="@color/font_gray"
    android:textSize="@dimen/txt_size_large" />


</LinearLayout>
